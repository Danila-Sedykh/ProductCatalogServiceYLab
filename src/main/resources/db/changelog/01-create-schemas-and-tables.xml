<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1-create-schemas" author="user_123" runAlways="true">
        <sql>
            CREATE SCHEMA IF NOT EXISTS ${db.liquibaseSchema};
        </sql>
        <sql>
            CREATE SCHEMA IF NOT EXISTS ${db.appSchema};
        </sql>
    </changeSet>

    <changeSet id="2-create-sequences" author="user_123">
        <createSequence sequenceName="product_seq" schemaName="${db.appSchema}" startValue="1"/>
        <createSequence sequenceName="user_seq" schemaName="${db.appSchema}" startValue="1"/>
        <createSequence sequenceName="audit_seq" schemaName="${db.appSchema}" startValue="1"/>
    </changeSet>

    <changeSet id="3-create-users-table" author="user_123">
        <createTable tableName="users" schemaName="${db.appSchema}">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="username" type="varchar(100)">
                <constraints nullable="false" unique="true" uniqueConstraintName="uq_users_username"/>
            </column>
            <column name="password" type="varchar(255)"><constraints nullable="false"/></column>
            <column name="role" type="varchar(50)"><constraints nullable="false"/></column>
            <column name="created_at" type="timestamp"><constraints nullable="false"/></column>
        </createTable>
    </changeSet>

    <changeSet id="4-create-products-table" author="user_123">
        <createTable tableName="products" schemaName="${db.appSchema}">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_products"/>
            </column>
            <column name="code" type="varchar(100)" />
            <column name="name" type="varchar(255)"><constraints nullable="false"/></column>
            <column name="category" type="varchar(100)"/>
            <column name="brand" type="varchar(100)"/>
            <column name="price" type="numeric(12,2)"/>
        </createTable>
    </changeSet>

    <changeSet id="6-create-audit-table" author="user_123">
        <createTable tableName="audit" schemaName="${db.appSchema}">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_audit"/>
            </column>
            <column name="user_id" type="bigint"/>
            <column name="action" type="varchar(100)"><constraints nullable="false"/></column>
            <column name="description" type="text"/>
            <column name="created_at" type="timestamp"><constraints nullable="false"/></column>
        </createTable>
    </changeSet>

    <changeSet id="6-create-meta" author="user_123">
        <createTable tableName="categories" schemaName="${db.appSchema}">
            <column name="name" type="varchar(100)"><constraints primaryKey="true" nullable="false" primaryKeyName="pk_categories"/></column>
        </createTable>

        <createTable tableName="brands" schemaName="${db.appSchema}">
            <column name="name" type="varchar(100)"><constraints primaryKey="true" nullable="false" primaryKeyName="pk_brands"/></column>
        </createTable>
    </changeSet>

</databaseChangeLog>